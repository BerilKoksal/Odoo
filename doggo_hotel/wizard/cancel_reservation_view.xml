<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_cancel_reservation_form" model="ir.ui.view">
        <field name="name">cancel.reservation.wizard.form</field>
        <field name="model">cancel.reservation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="reservation_id"/>
                        <field name="reason"/>
                    </group>
                    <group>
                        <field name="date_cancel"/>
                    </group>
                </group>
                  <footer>
                      <button name="action_cancel" string="Cancel Reservation" type="object" class="btn-primary" data-hotkey="q"/>
                    <button special="cancel" data-hotkey="z" string="Discard" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_cancel_reservation" model="ir.actions.act_window">
        <field name="name">Cancel Reservation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.reservation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>