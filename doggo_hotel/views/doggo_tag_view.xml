<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_doggo_tag_tree" model="ir.ui.view">
        <field name="name">doggo.tag.tree</field>
        <field name="model">doggo.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active"/>

            </tree>
        </field>
    </record>

    <record id="view_doggo_tag_form" model="ir.ui.view">
        <field name="name">doggo.tag.form</field>
        <field name="model">doggo.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>


    <record id="action_doggo_tag" model="ir.actions.act_window">
        <field name="name">Doggo Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">doggo.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{ }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tag.
            </p>
        </field>
    </record>

    <menuitem name="Tags"
              id="menu_doggo_tag"
              parent="menu_configurations"
              action="action_doggo_tag"
              sequence="6"/>
</odoo>
