<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.doggo.hotel</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Doggo Hotel" id="doggo_hotel" string="Doggo Hotel" data-key="doggo_hotel" >
                        <h2>Doggo Hotel Management</h2>
                        <div class="row mt16 o_settings_container" id="doggo_hotel_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Cancellation before</span>
                                    <div class="text-muted content-group mt16">

                                        <field name="cancel_days" class="text-center oe_inline" />
                                        <span> days </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="doggo_hotel_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'doggo_hotel', 'bin_size': False}</field>
        </record>

        <menuitem id="doggo_hotel_config_settings_menu"
                  name="Settings"
            parent="doggo_hotel.menu_configurations"
                  sequence="0"
                  action="doggo_hotel_config_settings_action"
            groups="base.group_system"/>
    </data>
</odoo>
